<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="70dp" android:orientation="vertical">
        <TextView android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:id="@+id/carDetailsText" android:layout_width="match_parent" android:layout_height="25dp"
            android:text="@string/hello_blank_fragment" />
        <Button
            android:id="@+id/buttonShowCarDetails"
            android:text="@string/buttonHistoryShowDetails"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonRemoveFromHistory"
        android:text="@string/X"
        android:layout_marginLeft="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

</LinearLayout>